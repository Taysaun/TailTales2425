<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>

    <style>
        h1 {
            margin-top: 50px;
        }

        #petList {
            display: block;
            justify-content: center;
            margin-top: 50px;
            border-style: solid;
            border-width: 1px;
            padding: 20px;
        }

        button {
            margin-top: 20px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
        }

        select {
            margin-top: 20px;
            padding: 5px;
            font-size: 16px;
        }

        #notification {
            position: fixed;
            bottom: 20px;
            right: 20px;
            background-color: #333;
            color: white;
            padding: 15px 20px;
            border-radius: 5px;
            box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.2);
            font-family: Arial, sans-serif;
            font-size: 16px;
            display: none;
            opacity: 0;
            transition: opacity 0.5s ease-in-out;
        }

        #notification.show {
            display: block;
            opacity: 1;
        }
    </style>

</head>
<body>

    <div id="notification"></div>

    <h1>Pets</h1>
    <div>
        <% if (pets.length > 0) { %>
            <ul">
                <% pets.forEach(pet => { %>
                    <li id="<%= pet.id %>">
                        <%= pet.name %>
                        <ul>
                            <li>health: <%= pet.health %></li>
                            <li>boredom: <%= pet.boredom %></li>
                            <li>hunger: <%= pet.hunger %></li>
                        </ul>
                    </li>
    
                <% }) %>
            </ul>
    
            <select name="pets" id="pets">
                <% pets.forEach(pet => { %>
                    <option value="<%= pet.id %>"><%= pet.name %></option>
                <% }) %>
            </select>
    
            <button onclick="play()">Play with pet</button>
        <% } %>
    </div>
</body>
<script src="socket.io/socket.io.js"></script>
<script>

function showNotification(message) {
            const notification = document.getElementById('notification');

            notification.textContent = message;

            notification.classList.add('show');

            setTimeout(() => {
                notification.classList.remove('show');
            }, 3000);
        }

    document.getElementById("pets").selectedIndex = -1;

    const socket = io();
    
    let currentPet = document.getElementById('pets').value;

    document.getElementById('pets').addEventListener('change', (e) => {
        currentPet = e.target.value;
        console.log(currentPet);
    });

    socket.on('petUpdated', (pet) => {
        console.log(pet);
        const pets = document.querySelectorAll('li');
        pets.forEach(petElement => {
            if (pet.id ==  petElement.id) {
                petElement.innerHTML = `
                    ${pet.name}
                    <ul>
                        <li>health: ${pet.health}</li>
                        <li>boredom: ${pet.boredom}</li>
                        <li>hunger: ${pet.hunger}</li>
                    </ul>
                `;
            }
        });
        console.log(`Pet health is updated.`);
        showNotification('Pet health updated.');
    });

    function play() {
        socket.emit('play', currentPet);
    }

        socket.on('noPetFound', (data) => {
            console.log(`Pet not found.`);
            showNotification(data.message);
        });

        socket.on('dataRetreiveError', (data) => {
            console.log(`Error retreiving data from database.`);
            showNotification(data.message);
        });

</script>
</html>